{
  "name": "demo/swoole-jsonrpc",
  "description": "Sample integration test with PHP 8.2 + Swoole + JSON-RPC concepts",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "project",
  "authors": [
    {
      "name": "alandino",
      "email": "angelolandino@hotmail.it"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-swoole": "^4.8",
    "ext-mongodb": "*",
    "vlucas/phpdotenv": "^5.5",
    "monolog/monolog": "^3.3",
    "psr/container": "^2.0"
  },
  "require-dev": {
    "swoole/ide-helper": "^4.8",
    "phpunit/phpunit": "^9.6",
    "phpstan/phpstan": "^1.3",
    "squizlabs/php_codesniffer": "^3.6",
    "friendsofphp/php-cs-fixer": "^3.18"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "server": "@php bin/server.php",
    "server-debug": [
      "@putenv DEBUG=true",
      "@server"
    ],
    "test": "phpunit",
    "cs-fix": "vendor/bin/php-cs-fixer fix src"
  },
  "config": {
    "process-timeout": 0
  }
}
